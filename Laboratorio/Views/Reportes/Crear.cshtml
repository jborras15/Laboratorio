@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Reportes

@{
    ViewData["Title"] = "Crear Reporte";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    
    <h1>Crear Reporte</h1>
    <form asp-controller="Reportes" asp-action="Crear">
        <div class="mb-3">
            
            <label asp-for="Descripcion" class="form-label"></label>
            <input type="text" asp-for="Descripcion" class="form-control" required="true">
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
</body>
</html>